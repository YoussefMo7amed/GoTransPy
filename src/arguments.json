{
    "description": "This tool is a free and unlimited python CLI for google translate.\nDeveloped by Youssef Mohamd.\nGithub:(https://github.com/youssefmo7amed)\nbased on (lushan88a/google_trans_new)\nunder MIT license.",
    "argument": {
        "version": {
            "name": "-v",
            "flag": "--version",
            "value": "0.0.1"
        },
        "text": {
            "help": "text that will be translated.",
            "examples": [
                "python main.py Ägypten",
                "python main.py مصر",
                "python main.py Mısır"
            ]
        },
        "source": {
            "name": "-s",
            "flag": "--source",
            "help": "the source language.",
            "examples": [
                "python main.py Ägypten -s de",
                "python main.py مصر -s ar",
                "python main.py مصر --source ar",
                "python main.py Mısır -s tr",
                "python main.py Mısır -source tr"
            ]
        },
        "target": {
            "name": "-t",
            "flag": "--target",
            "help": "the target language.",
            "examples": [
                "python main.py Ägypten -t en",
                "python main.py Ägypten --target en",
                "python main.py مصر -t hi",
                "python main.py Mısır -t ar",
                "python main.py Mısır -target ar"
            ]
        },
        "file":{
            "name":"-f",
            "flag": "--file",
            "help": "read from file.",
            "examples": [
                "python main.py Ägypten -t en",
                "python main.py Ägypten --target en",
                "python main.py مصر -t hi",
                "python main.py Mısır -t ar",
                "python main.py Mısır -target ar"
            ]
        }
    }
}